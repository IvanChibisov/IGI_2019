@model SystemOfTestKnowledge.ViewModels.CreateQuestionViewModel

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="AddQuestion" method="post">
    <div class="form-group">
        <label asp-for="Text">Text</label>
        <input asp-for="Text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CorrectAnswer">Correct answer</label>
        <input asp-for="CorrectAnswer" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AnswerOption">Answer options</label>
        <input asp-for="AnswerOption" class="form-control" />
    </div>
    <input asp-for="TestId" value="@ViewBag.Id" hidden="hidden" />
    <button type="submit" class="btn btn-primary">Добавить</button>
</form>
